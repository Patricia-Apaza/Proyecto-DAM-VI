<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="restaurantesMasValoradosReport"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <!-- Parámetros -->
    <parameter name="restaurantesMasValorados" class="java.util.List"/>

    <!-- Fields -->
    <field name="nombreRestaurante" class="java.lang.String"/>
    <field name="calificacionPromedio" class="java.lang.Double"/>
    <field name="numeroReseñas" class="java.lang.Long"/>
    <field name="categoriaRestaurante" class="java.lang.String"/>

    <!-- Título del reporte -->
    <title>
        <band height="50">
            <staticText value="Restaurantes Más Valorados"/>
        </band>
    </title>

    <!-- Encabezado de columna -->
    <columnHeader>
        <band height="30">
            <staticText value="Restaurante"/>
            <staticText value="Calificación Promedio"/>
            <staticText value="Número de Reseñas"/>
            <staticText value="Categoría"/>
        </band>
    </columnHeader>

    <!-- Detalles del reporte -->
    <detail>
        <band height="20">
            <textField expression="$F{nombreRestaurante}"/>
            <textField expression="$F{calificacionPromedio}"/>
            <textField expression="$F{numeroReseñas}"/>
            <textField expression="$F{categoriaRestaurante}"/>
        </band>
    </detail>

    <!-- Pie de página -->
    <pageFooter>
        <band height="30">
            <staticText value="Página"/>
            <textField expression="$V{PAGE_NUMBER}"/>
        </band>
    </pageFooter>
</jasperReport>
